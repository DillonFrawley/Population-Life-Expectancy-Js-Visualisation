{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Average Life Expectancy For The Top & Bottom 5 Countries",
    "fontSize": 20
  },
  "width": 675,
  "height": 300,
  "data": {
    "url": "./data/List_of_countries_by_life_expectancy.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [{ "field": "All", "order": "descending" }]
    },
    {
      "joinaggregate": [{ "op": "max", "field": "rank", "as": "total" }]
    },
    {
      "filter": "datum.rank <= 5  || (datum.rank > datum.total - 5)"
    },
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "layer": [
    {
      "encoding": {
        "x": {
          "title": "Life Expectancy",
          "field": "All",
          "type": "quantitative",
          "axis": { "grid": true },
          "scale": {
            "domain": [0, 90]
          },
          "sort": { "encoding": "y", "order": "ascending" }
        },
        "y": {
          "title": "Country",
          "field": "Countries and regions",
          "type": "ordinal",
          "sort": { "op": "sum", "field": "All", "order": "descending" }
        },
        "color": {
          "field": "Countries and regions",
          "type": "nominal"
        },

        "tooltip": [
          {
            "field": "Countries and regions",
            "type": "nominal",
            "title": "Country"
          },
          { "field": "Continent", "type": "nominal", "title": "Continent" },
          { "field": "All", "type": "quantitative", "title": "Male" }
        ]
      },
      "layer": [
        {
          "mark": {
            "type": "bar"
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": 3
          },
          "encoding": {
            "text": { "field": "All", "type": "quantitative" }
          }
        }
      ]
    },
    {
      "data": {
        "url": "./data/List_of_countries_by_life_expectancy.csv"
      },
      "encoding": {
        "x": {
          "title": "Life Expectancy",
          "field": "All",
          "type": "quantitative",
          "aggregate": "mean"
        },
        "color": {
          "type": "nominal",
          "scale": {"domain": ["Mean Value: 72.63"], "range": ["red"]}
        },
        "tooltip": [
          {
            "title": "Life Expectancy",
            "field": "All",
            "type": "quantitative",
            "aggregate": "mean"
          }
        ]
      },
      "layer": [
        {
          "mark": {
            "type": "rule"
          },
          "encoding": {
            "color": { "datum":"Mean Value: 72.63" },
            "size": { "value": 3 }
          }
        }
      ]
    }
  ],
  "resolve": {"scale": {"color": "independent"}},
  "config": {
    "scale": {
      "bandPaddingInner": 0.2
    }
  }
}
