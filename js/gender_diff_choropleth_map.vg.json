{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Gender Difference By Country in 2019 Choropleth Map",
    "frame": "group",
    "align": "center",
    "fontSize": 16,
    "subtitle": "Figure 5",
    "subtitlePadding": 5,
    "subtitleColor": "grey",
    "anchor": "middle"
  },
  "width": 700,
  "height": 500,
  "params": [
    {
      "name": "zoom_level",
      "value": 140,
      "bind": {
        "input": "range",
        "min": 140,
        "max": 500,
        "step": 5,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0, 0],
      "bind": {
        "input": "select",
        "options": [
          [0, 0],
          [-90, 30],
          [-75, -20],
          [15, 45],
          [12, 5],
          [100, 30],
          [140, -20]
        ],
        "labels": [
          "World",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center": { "expr": "center_to" },
    "scale": { "expr": "zoom_level" }
  },
  "layer": [
    {
      "data": { "sphere": true },
      "mark": { "type": "geoshape", "fill": "aliceblue" }
    },
    {
      "data": {
        "url": "./data/ne_110m.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME_CIAWF",
          "as": "note"
        }
      ],
      "mark": { "type": "geoshape", "fill": "gray", "stroke": "white" },
      "encoding": { "tooltip": { "field": "note" } }
    },
    {
      "data": {
        "url": "./data/ne_110m.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "stroke": "lightgray", "fillOpacity": 0 }
    },
    {
      "data": {
        "url": "./data/ne_110m.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [
        {
          "lookup": "properties.NAME_CIAWF",
          "from": {
            "data": {
              "url": "./data/List_of_countries_by_life_expectancy.csv"
            },
            "key": "Country",
            "fields": ["Gender"]
          }
        },
        { "filter": "datum.Gender > 0" },
        { "calculate": "datum.Gender", "as": "Gender Difference" },
        { "calculate": "datum.Continent", "as": "Continent" },
        { "calculate": "datum.Country", "as": "Country" }
      ],
      "layer": [
        {
          "mark": { "type": "geoshape", "stroke": "gray" },
          "encoding": {
            "color": {
              "field": "Gender Difference",
              "title": "Gender Difference(Years)",
              "scale": {
                "type": "quantize",
                "nice": 7,
                "scheme": "yellowgreenblue"
              },

              "legend": {
                "titlePadding": 5,
                "direction": "horizontal",
                "titleFontSize": 10,
                "orient": "bottom-right"
              }
            },
            "tooltip": [
              {
                "field": "properties.NAME_CIAWF",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "properties.CONTINENT",
                "type": "nominal",
                "title": "Continent"
              },
              {
                "field": "Gender Difference",
                "type": "ordinal",
                "format": ".1f",
                "title": "Gender Diff(Years)"
              }
            ]
          }
        },
        {
          "layer": [
            {
              "transform": [
                {
                  "calculate": "'Guinea has the;lowest gender; difference in Africa:; 1.2 years'",
                  "as": "text_annotation_raw"
                },
                {
                  "calculate": "split(datum.text_annotation_raw,';')",
                  "as": "text_annotation"
                }
              ],
              "data": {
                "values": [{ "a": -28, "b": -3 }]
              },
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -8,
                "dy": -8,
                "baseline": "middle",
                "fontStyle": "italic",
                "fontSize": 9
              },
              "encoding": {
                "longitude": { "field": "a", "type": "quantitative" },
                "latitude": { "field": "b", "type": "quantitative" },
                "text": { "field": "text_annotation" },
                "color": { "value": "black" }
              }
            },
            {
              "transform": [
                {
                  "calculate": "'Russia has the second; highest gender difference:; 10.6 years'",
                  "as": "text_annotation_raw"
                },
                {
                  "calculate": "split(datum.text_annotation_raw,';')",
                  "as": "text_annotation"
                }
              ],
              "data": {
                "values": [{ "a": 127, "b": 26 }]
              },
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -8,
                "dy": -8,
                "baseline": "middle",
                "fontStyle": "italic",
                "fontSize": 9
              },
              "encoding": {
                "longitude": { "field": "a", "type": "quantitative" },
                "latitude": { "field": "b", "type": "quantitative" },
                "text": { "field": "text_annotation" },
                "color": { "value": "black" }
              }
            },
            {
              "transform": [
                {
                  "calculate": "'Lithuania has the highest; gender difference: 11.1 years'",
                  "as": "text_annotation_raw"
                },
                {
                  "calculate": "split(datum.text_annotation_raw,';')",
                  "as": "text_annotation"
                }
              ],
              "data": {
                "values": [{ "a": -66, "b": 35 }]
              },
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -8,
                "dy": -8,
                "baseline": "middle",
                "fontStyle": "italic",
                "fontSize": 9
              },
              "encoding": {
                "longitude": { "field": "a", "type": "quantitative" },
                "latitude": { "field": "b", "type": "quantitative" },
                "text": { "field": "text_annotation" },
                "color": { "value": "black" }
              }
            },
            {
              "transform": [
                {
                  "calculate": "'El Salvador has the highest; in North America: 9.4 years'",
                  "as": "text_annotation_raw"
                },
                {
                  "calculate": "split(datum.text_annotation_raw,';')",
                  "as": "text_annotation"
                }
              ],
              "data": {
                "values": [{ "a": -140, "b": 8 }]
              },
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -8,
                "dy": -8,
                "baseline": "middle",
                "fontStyle": "italic",
                "fontSize": 9
              },
              "encoding": {
                "longitude": { "field": "a", "type": "quantitative" },
                "latitude": { "field": "b", "type": "quantitative" },
                "text": { "field": "text_annotation" },
                "color": { "value": "black" }
              }
            }
          ]
        }
      ]
    }
  ]
}
