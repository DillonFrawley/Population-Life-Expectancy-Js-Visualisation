{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Average Life Expectancy By Country in 2019 Choropleth Map",
    "frame":"group",
    "align": "center",
    "fontSize":16,
    "subtitle":"Figure 1",
    "subtitlePadding":5,
    "subtitleColor":"grey",
    "anchor": "middle"
  },
  "width": 700,
  "height": 500,
  "params": [
    {
      "name": "zoom_level",
      "value": 140,
      "bind": {
        "input": "range",
        "min": 140,
        "max": 500,
        "step": 5,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0, 0],
      "bind": {
        "input": "select",
        "options": [
          [0, 0],
          [-90, 30],
          [-75, -20],
          [15, 45],
          [12, 5],
          [100, 30],
          [140, -20]
        ],
        "labels": [
          "World",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center": { "expr": "center_to" },
    "scale": { "expr": "zoom_level" }
  },
  "layer": [
    {
      "data": { "sphere": true },
      "mark": { "type": "geoshape", "fill": "aliceblue" }
    },
    {
      "data": {
        "url": "./data/ne_110m.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME_CIAWF",
          "as": "note"
        }
      ],
      "mark": { "type": "geoshape", "fill": "gray", "stroke": "white" },
      "encoding": { "tooltip": { "field": "note" } }
    },
    {
      "data": {
        "url": "./data/ne_110m.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "stroke": "lightgray", "fillOpacity": 0 }
    },
    {
      "data": {
        "url": "./data/ne_110m.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [
        {
          "lookup": "properties.NAME_CIAWF",
          "from": {
            "data": {
              "url": "./data/List_of_countries_by_life_expectancy.csv"
            },
            "key": "Country",
            "fields": ["All"]
          }
        },
        { "filter": "datum.All > 0" },
        { "calculate": "datum.All", "as": "Average Life Expectancy" },
        { "calculate": "datum.Continent", "as": "Continent" },
        { "calculate": "datum.Country", "as": "Country" }
      ],
      "layer": [
        {
          "mark": { "type": "geoshape", "stroke": "lightgrey" },
          "encoding": {
            "color": {
              "field": "Average Life Expectancy",
              "title": "Average Life Expectancy",
              "scale": { "type": "quantize", "nice": 7, "scheme": "goldgreen" },

              "legend": {
                "titlePadding": 5,
                "direction": "horizontal",
                "titleFontSize": 10,
                "orient": "bottom-right"
              }
            },
            "tooltip": [
              {
                "field": "properties.NAME_CIAWF",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "properties.CONTINENT",
                "type": "nominal",
                "title": "Continent"
              },
              {
                "field": "Average Life Expectancy",
                "type": "ordinal",
                "format": ".1f",
                "title": "Avg Life(Years)"
              }
            ]
          }
        },
        {
          "layer": [
            {
              "transform": [{
                "calculate": "'Australia is the country in; oceania with the highest; average life expectancy:;  83.4 years'",
                "as": "text_annotation_raw"
              },
              {
                "calculate": "split(datum.text_annotation_raw,';')",
                "as": "text_annotation"
              }],
              "data": {
                "values": [{ "a": 90, "b": -45 }]
              },
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -8,
                "dy": -8,
                "baseline": "middle",
                "fontStyle": "italic",
                "fontSize":9
                
              },
              "encoding": {
                "longitude": { "field": "a", "type": "quantitative" },
                "latitude": { "field": "b", "type": "quantitative" },
                "text": { "field": "text_annotation" },
                "color":{"value":"black"}
              }
            },
            {
              "transform": [
                {
                  "calculate": "'Africa has the country; with the lowest overall; average life expectancy; being Central African; Republic: 53.3 Years'",
                  "as": "text_annotation_raw"
                },
                {
                  "calculate": "split(datum.text_annotation_raw,';')",
                  "as": "text_annotation"
                }
              ],
              "data": {
                "values": [{ "a": -33, "b": -15 }]
              },
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -8,
                "dy": -8,
                "baseline": "middle",
                "fontStyle": "italic",
                "fontSize":9
              },
              "encoding": {
                "longitude": { "field": "a", "type": "quantitative" },
                "latitude": { "field": "b", "type": "quantitative" },
                "text": { "field": "text_annotation" },
                "color":{"value":"black"}
              }
            },
            {
              "transform": [
                {
                  "calculate": "'Monaco is the country;with the highest; average life expectancy; in the world: 85.4 years'",
                  "as": "text_annotation_raw"
                },
                {
                  "calculate": "split(datum.text_annotation_raw,';')",
                  "as": "text_annotation"
                }
              ],
              "data": {
                "values": [{ "a": -66, "b": 35 }]
              },
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -8,
                "dy": -8,
                "baseline": "middle",
                "fontStyle": "italic",
                "fontSize":9
              },
              "encoding": {
                "longitude": { "field": "a", "type": "quantitative" },
                "latitude": { "field": "b", "type": "quantitative" },
                "text": { "field": "text_annotation" },
                "color":{"value":"black"}
              }
            },{
              "transform": [
                {
                  "calculate": "'Canada is the country;with the highest average;life expectancy in;North & South America:; 82.4 years'",
                  "as": "text_annotation_raw"
                },
                {
                  "calculate": "split(datum.text_annotation_raw,';')",
                  "as": "text_annotation"
                }
              ],
              "data": {
                "values": [{ "a": -180, "b": 40 }]
              },
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -8,
                "dy": -8,
                "baseline": "middle",
                "fontStyle": "italic",
                "fontSize":9
              },
              "encoding": {
                "longitude": { "field": "a", "type": "quantitative" },
                "latitude": { "field": "b", "type": "quantitative" },
                "text": { "field": "text_annotation" },
                "color":{"value":"black"}
              }
            }
          ]
        }
      ]
    }
  ]
}
