{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 270,
  "height": 300,
  "title": {
    "text": "Average Life Expectancy Male Vs Female Per Country in 2019 ",
    "limit": 100,
    "align": "left",
    "anchor":"start",
    "subtitle":"Figure 5",
    "subtitlePadding":20,
    "subtitleColor":"grey",
    "subtitleFontSize":14
  },

  "data": {
    "url": "./data/List_of_countries_by_life_expectancy.csv"
  },
  "params": [
    {
      "name": "Gender_Difference",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 11,
        "step": 0.1,
        "name": "Gender Difference(Years) "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    },
    { "filter": "datum.Gender > Gender_Difference" }
  ],
  "encoding": {
    "x": {
      "title":"Male Life Expectancy (Years)",
      "field": "M",
      "type": "quantitative",
      "scale": {
        "domain": [50, 90]
      }
    },
    "y": {
      "title": "Female Life Expectancy (Years)",
      "field": "F",
      "type": "quantitative",
      "scale": { "domain": [50, 90] }
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "scale": {
        "domain": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "range": [
          "#e41a1c",
          "#984ea3",
          "#ff7f00",
          "#e75480",
          "#377eb8",
          "#a65628"
        ]
      }
    },
    "opacity": {
      "value": 0.6
    }
  },
  "layer": [
    {
      
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "tooltip": [
          { "field": "Continent", "type": "nominal", "title": "Continent" },
          {
            "field": "Country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "M",
            "type": "quantitative",
            "format": ".1f",
            "title": "Male"
          },
          {
            "field": "F",
            "type": "quantitative",
            "format": ".1f",
            "title": "Female"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -8,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": { "field": "Country", "type": "nominal" },
        "color": { "value": "black" },
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Eswatini' || datum['Country'] == 'Japan' || datum['Country'] == 'Australia' || datum['Country'] == 'Palau' || datum['Country'] == 'Russia' || datum['Country'] =='Yemen' || datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "layer": [
        {
          "data": {
            "values": [
              { "a": 0, "b": 0 },
              { "a": 100, "b": 100 }
            ]
          },
          "encoding": {
            "x": {
              "field": "a",
              "type": "quantitative"
            },
            "y": {
              "field": "b",
              "type": "quantitative"
            },
            "color": {
              "type": "nominal",
              "scale": { "domain": ["Male = Female"], "range": ["black"] }
            }
          },
          "layer": [
            {
              "transform": [
                {"calculate": "'<---- Male = Female'", "as":"text_annotation"}
              ],
              "mark": { 
                "type": "text",
                "align": "left",
                "dx": -500,
                "dy": 360,
                "clip": true,
                "baseline": "middle",
                "fontStyle": "italic",
                "fontSize":12
                
              },
              "encoding": {
                "text":{"field":"text_annotation"},
                "color": { "value": "black" }
              }
            },
            {
              "mark": { "type": "line", "strokeDash": [8, 8], "clip": true },
              "encoding": {
                "color": { "datum": "Male = Female" }
              },
              "params": [
                {
                  "name": "grid",
                  "select": "interval",
                  "bind": "scales"
                }
              ]
            }
            
          ]
        }
      ]
    }
  ],
  "resolve": { "scale": { "color": "independent" } }
}
