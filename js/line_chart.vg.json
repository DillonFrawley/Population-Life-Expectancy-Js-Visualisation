{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Average Life Expectancy Male Vs Female Per Continent and Country in 2019 ",
    "fontSize": 20
  },
  "width": 675,
  "height": 460,
  "layer": [
    {
      "data": {
        "url": "./data/List_of_countries_by_life_expectancy.csv"
      },
      "params": [
        {
          "name": "Continent_selection",
          "select": { "type": "point", "fields": ["Continent"] },
          "bind": "legend"
        },
        {
          "name": "grid",
          "select": "interval",
          "bind": "scales"
        }
      ],
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "x": {
          "title": "Male",
          "field": "M",
          "type": "quantitative",
          "scale": {
            "domain": [50, 90]
          }
        },
        "y": {
          "title": "Female",
          "field": "F",
          "type": "quantitative",
          "scale": { "domain": [50, 90] }
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "green",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {
          "condition": { "param": "Continent_selection", "value": 0.6 },
          "value": 0.1
        },
        "tooltip": [
          
          { "field": "Continent", "type": "nominal", "title": "Continent" },
          {
            "field": "Countries and regions",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "M",
            "type": "quantitative",
            "format": ".1f",
            "title": "Male"
          },
          {
            "field": "F",
            "type": "quantitative",
            "format": ".1f",
            "title": "Female"
          }
        ]
      }
    },
    {
      "data": {
        "values": [
          { "a": 0, "b": 0 },
          { "a": 100, "b": 100 }
        ]
      },
      "encoding": {
        "x": {
          "field": "a",
          "type": "quantitative"
        },
        "y": {
          "field": "b",
          "type": "quantitative"
        },
        "color": {
          "type": "nominal",
          "scale": { "domain": ["Male = Female"], "range": ["black"] }
        }
      },
      "layer": [
        {
          "mark": { "type": "line", "strokeDash": [8, 8] },
          "encoding": {
            "color": { "datum": "Male = Female" }
          }
        }
      ]
    }
  ],
  "resolve": { "scale": { "color": "independent" } }
}
