{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Average Life Expectancy For The Top & Bottom N Ranked Countries",
    "align": "left",
    "limit":100,
    "subtitle": "Figure 2 (top) & Figure 3 (btm)",
    "subtitleColor": "grey",
    "anchor": "start",
    "subtitlePadding":20
  },
  "data": {
    "url": "./data/List_of_countries_by_life_expectancy.csv"
  },
  "params": [
    {
      "name": "Rank",
      "value": 10,
      "bind": {
        "input": "range",
        "min": 1,
        "max": 197,
        "step": 1,
        "name": "Display Top & Bottom Rank Countries"
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "vconcat": [
    {
      "title": {
        "text": "",
        "subtitle": "Figure 2"
      },
      "width": 170,
      "height": 150,
      "transform": [
        {
          "window": [
            {
              "op": "rank",
              "as": "rank"
            }
          ],
          "sort": [{ "field": "All", "order": "descending" }]
        },
        {
          "joinaggregate": [{ "op": "max", "field": "rank", "as": "total" }]
        },
        {
          "filter": "Continent_selection == null || datum.Continent == Continent_selection"
        },
        {
          "filter": "datum.rank <= Rank"
        },
        { "calculate": "datum.rank", "as": "CountryRank" }
      ],
      "layer": [
        {
          "encoding": {
            "x": {
              "title": "",
              "field": "All",
              "type": "quantitative",
              "axis": { "grid": true, "labels": true },
              "scale": {
                "domain": [50, 90]
              },
              "sort": { "encoding": "y", "order": "ascending" }
            },
            "y": {
              "title": "",
              "field": "Country",

              "type": "ordinal",
              "sort": { "op": "sum", "field": "All", "order": "descending" }
            },
            "color": {
              "field": "Continent",
              "type": "nominal",
              "scale": {
                "domain": [
                  "North America",
                  "South America",
                  "Europe",
                  "Africa",
                  "Asia",
                  "Oceania"
                ],
                "range": [
                  "#e41a1c",
                  "#984ea3",
                  "#ff7f00",
                  "#e75480",
                  "#377eb8",
                  "#a65628"
                ]
              }
            },

            "tooltip": [
              { "field": "Continent", "type": "nominal", "title": "Continent" },
              {
                "field": "Country",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "All",
                "type": "quantitative",
                "title": "Life Expectancy"
                
              }
            ]
          },
          "layer": [
            {
              "mark": {
                "type": "bar",
                "clip": true
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 3
              },
              "encoding": {
                "text": { "field": "CountryRank", "type": "quantitative" }
              }
            }
          ]
        },
        {
          "data": {
            "url": "./data/List_of_countries_by_life_expectancy.csv"
          },
          "encoding": {
            "x": {
              "title": "",
              "field": "All",
              "type": "quantitative",
              "aggregate": "mean"
            },
            "color": {
              "type": "nominal",
              "scale": { "domain": ["World Mean"], "range": ["black"] }
            },
            "tooltip": [
              {
                "title": "Life Expectancy",
                "field": "All",
                "type": "quantitative",
                "aggregate": "mean",
                "format": ".1f"
              }
            ]
          },
          "layer": [
            {
              "mark": {
                "type": "rule"
              },
              "encoding": {
                "color": { "datum": "World Mean" },
                "size": { "value": 3 }
              }
            }
          ]
        }
      ],
      "resolve": { "scale": { "color": "independent" } }
    },
    {
      "width": 170,
      "height": 150,
      "transform": [
        {
          "window": [
            {
              "op": "rank",
              "as": "rank"
            }
          ],
          "sort": [{ "field": "All", "order": "descending" }]
        },
        {
          "joinaggregate": [{ "op": "max", "field": "rank", "as": "total" }]
        },
        {
          "filter": "Continent_selection == null || datum.Continent == Continent_selection"
        },
        {
          "filter": "datum.rank >= datum.total - Rank"
        },
        { "calculate": "datum.rank", "as": "CountryRank" }
      ],
      "layer": [
        {
          "encoding": {
            "x": {
              "title": "Life Expectancy (Years)",
              "field": "All",
              "type": "quantitative",
              "axis": { "grid": true },
              "scale": {
                "domain": [50, 90]
              }
            },
            "y": {
              "title": "Country",
              "field": "Country",
              "type": "ordinal",
              "sort": { "op": "sum", "field": "All", "order": "descending" }
            },
            "color": {
              "field": "Continent",
              "type": "nominal",
              "scale": {
                "domain": [
                  "North America",
                  "South America",
                  "Europe",
                  "Africa",
                  "Asia",
                  "Oceania"
                ],
                "range": [
                  "#e41a1c",
                  "#984ea3",
                  "#ff7f00",
                  "#e75480",
                  "#377eb8",
                  "#a65628"
                ]
              },
              "legend": null
            },
            "tooltip": [
              { "field": "Continent", "type": "nominal", "title": "Continent" },
              {
                "field": "Country",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "All",
                "type": "quantitative",
                "title": "Life Expectancy"
              }
            ]
          },
          "layer": [
            {
              "mark": {
                "type": "bar",
                "clip": true
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 3
              },
              "encoding": {
                "text": { "field": "CountryRank", "type": "quantitative" }
              }
            }
          ]
        },
        {
          "data": {
            "url": "./data/List_of_countries_by_life_expectancy.csv"
          },
          "encoding": {
            "x": {
              "title": "",
              "field": "All",
              "type": "quantitative",
              "aggregate": "mean"
            },
            "color": {
              "type": "nominal",
              "scale": { "domain": ["World Mean"], "range": ["black"] },
              "legend": null
            },

            "tooltip": [
              {
                "title": "Life Expectancy",
                "field": "All",
                "type": "quantitative",
                "aggregate": "mean",
                "format": ".1f"
              }
            ]
          },
          "layer": [
            {
              "mark": {
                "type": "rule"
              },
              "encoding": {
                "color": { "datum": "World Mean" },
                "size": { "value": 3 }
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": 4,
                "dy": 0,
                "baseline": "middle",
                "fontStyle": "italic",
                "fontSize": 10
              },
              "encoding": {
                "text": { "value": "<--- World Mean" }
              }
            }
          ]
        }
      ],
      "resolve": { "scale": { "color": "independent" } }
    }
  ]
}
